function render() {
  document.getElementById("total").innerText = data.total;
  document.getElementById("pos").innerText = data.pos;
  document.getElementById("neg").innerText = data.neg;
  document.getElementById("coins").innerText = data.coins;
}

function add(points) {
  data.total += points;
  if (points > 0) {
    data.pos += points;
    data.coins += Math.floor(points/5);
  } else {
    data.neg += points;
  }
  save();
}

function save() {
  localStorage.setItem("vidaPuntos", JSON.stringify(data));
  render();
}

goodHabits.forEach(h =>
  document.getElementById("goodHabits").innerHTML +=
  `<button class="good" onclick="add(${h[1]})">${h[0]} (+${h[1]})</button>`
);

badHabits.forEach(h =>
  document.getElementById("badHabits").innerHTML +=
  `<button class="bad" onclick="add(${h[1]})">${h[0]} (${h[1]})</button>`
);

function buyBad() {
  if (data.coins >= 5) {
    data.coins -= 5;
    add(-5);
  } else {
    alert("No ten√©s LautyCoins suficientes");
  }
}

render();
